{% layout 'layout.liquid' %}
{% block content %}

<div class="container-sm">
</br>


    <form action="/auth/signup" method="POST">
        <fieldset>
            <div class="authHeader">
            <h2 class="legend"> "Shut up & sign up already." </h2>

        <div class="signup">
         <div class="authImg">

            <!-- {{ sign-up.jpeg | asset_url | img_tag: sign-up }} -->
