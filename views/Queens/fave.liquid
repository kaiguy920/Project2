{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
</br>
    <h1 class="pageHeader">Oh, so you think you can make HerStory, huh?</h1>
    <div class="centerHeader">
    <h2 class="indexHeader">My Faves</h2>
</div>
    <div class="row">
        {% for queen in queen %}
        <div class="card" style="width: 15rem;">
            <h5 class="card-header" style="margin: 0 -15px;">{{queen.name}}</h5>
            <div class="card-body">
                <img class="card-image" src="{{queen.image}}" height="200" width="150">
                
                <div>
                    {% if example.owner == userId %}
                    <form action="/team/{{ queen._id }}" method="POST">

                        <input type="hidden" value="{{ teamMembers._id }}" name="id">
                        <input type="hidden" value="{{ team[0].teamMembers.name }}" name="name">

                        <input type="submit" value="She's Team Material" class="btn btn-secondary btn-sm btn-block favButton">
                    </form>
                    <div class="cardButtons">
                    <form action="/queen/fave/mine/{{ queen._id }}?_method=DELETE" method="POST">
                        <input type="submit" value="Sashay Away" class="btn btn-outline-danger btn-sm btn-block favButton">
                    </form>
                </div>

                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}