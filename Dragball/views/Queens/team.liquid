{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
</br>
</br>
</br>
    <h1>Oh, so you think you can make HerStory, huh?</h1>
    
   
    <form action="/team/mine/name/?_method=PUT" method="POST">
        <fieldset>

            <label class="form-label">Team Name </label>
            <input type="text" name="name" placeholder="ex: Slaytina" class="form-control">
            <input type="hidden" value="{{ team._id }}" name="id">
        </fieldset>
        <input type="submit" value="BAM!" class="btn btn-outline-secondary">
    </form>
  
    <h1>{{ team.teamName }}</h1>
   

    <h2 class="display-6">
      Top 5
    </h2>

    <div class="row">
        {% for queen in team.teamMembers %}
    
        <div class="card" style="width: 18rem;">
            <h5 class="card-header">{{ queen.name }}</h5>
            <div class="card-body">
                <img src="{{queen.image}}" height="200" width="150">
                <p class="card-text">

                </p>
                {% if example.owner == userId %}
                <form action="/team/mine/{{ queen._id }}?_method=DELETE" method="POST">
                    <input type="submit" value="Sashay Away" class="btn btn-danger">
                </form>
                <div class="form-group">
                    <label for="queenRank">Order</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>

                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}