{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    
    <h1>Oh, so you think you can make HerStory, huh?</h1>
    <h2 class="display-6">My Faves</h2>
    <div class="row">
        {% for queen in queen %}
            <div class="card" style="width: 18rem;">
                <h5 class="card-header">{{queen.name}}</h5>
                <div class="card-body">
                    <img src="{{queen.image_url}}">
                    <p class="card-text"> 
                        
                    </p>
                    <div class="btn-group">
                        {% if example.owner == userId %}
                    <form action="/team/top5" method="POST">
                        <input type="submit" value="She's Team Material" class="btn btn-dark">
                    </form>
                    {% endif %}
                </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}